{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext", "es6"],
    "allowJs": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "removeComments": true
  },
  "include": ["**/*.ts", "**/*.tsx", "next.config.js"],
  "exclude": ["node_modules", "**/*.test.ts", "*.test.ts"]
}
